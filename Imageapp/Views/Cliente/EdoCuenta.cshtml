<h2>Estados de Cuenta</h2>

<script>
    var data_rfc = "@ViewBag.rfc";
    var id_RV = '@ViewBag.id_RV'; //! ID de la vista
    var url_Cliente_GetPermisos = '@Url.Action("GetPermisos", "Cliente")';
    var url_Cliente_GetEdoCuenta = '@Url.Action("GetEdoCuenta", "Cliente")';
    var url_Catalogos_AddEstadoCuenta = '@Url.Action("AddEstadoCuenta", "Cliente")';
    var url_Catalogos_EliminarEstadoCuenta = '@Url.Action("EliminarEstadoCuenta", "Catalogos")';
    var id_regimen = @ViewBag.id_regimen;
</script>

<script src="~/Content/Js/Externo/moment.min.js"></script>
<script src="~/Content/Js/Personal/CRM/EdoCuenta.js?vs_1.0"></script>

<div class="section">
    <div class="row">
        <div class="form-group col-md-3">
            
            <div class="input-group mb-3">
                <a href="https://ior.ad/8j77?iframeHash=trysteps-1" target="_blank" class="btn btn-success btn-sm">Ver gua de carga</a>
            </div>

        </div>


        <div class="form-group col-md-3">
            <label>Mes:</label>
            <div class="input-group mb-3">
                <select class="form-control" id="fr_mesEntregable" name="fr_mesEntregable"></select>
            </div>
        </div>
        <div class="form-group col-md-3">
            <label>Año:</label>
            <div class="input-group mb-3">
                <select class="form-control" id="fr_periodoEntregable" name="fr_periodoEntregable">
                    <option value="2022">2022</option>
                    <option value="2021">2021</option>
                    <option value="2020">2020</option>
                    <option value="2019">2019</option>
                </select>

            </div>
        </div>
        <div class="form-group col-md-3">
            <label for="fr_estado_cuenta">Plantilla Conciliación Bancaria Interna</label>
            <div class="input-group mb-3">
                <a href="/Castelan/Documentos/Plantillas/Control_de_Bancos.xlsx" download="Conciliación bancaría" class="btn btn-success btn-sm"><i class="fa fa-download pr-2"></i>Descargar</a>
            </div>

        </div>
    </div>
    <br />
    <div class="row">
        <div class="form-group col-md-3">
            <label for="fr_estado_cuenta">Estado de Cuenta</label>
            <select class="form-control" id="fr_estado_cuenta" name="fr_estado_cuenta">
                <option value="a) Consulta de movimientos del mes PDF">a) Consulta de movimientos del mes PDF</option>
                <option value="b) Consulta de movimientos del mes Excel">b) Consulta de movimientos del mes Excel</option>
                <option value="c) Estado de cuenta del mes vencido PDF">c) Estado de cuenta del mes vencido PDF</option>
                <option value="d) Estado de cuenta del mes vencido  Excel">d) Estado de cuenta del mes vencido  Excel</option>
                <option value="e) Conciliación bancaría">e) Conciliación bancaría interna</option>
            </select>
        </div>
        <div class="form-group col-md-3">
            <label>Cargar archivo:</label>
            <div class="input-group mb-3">
                <input class="form-control" style="width:100%;" type="file" name="fr_urlArchivoEstadoCuenta" id="fr_urlArchivoEstadoCuenta" dirname="fr_urlArchivoEstadoCuenta" />
            </div>
        </div>
        <div class="form-group col-md-3">
            <label for="fr_descripcionEstadoCuenta">Descripción</label>
            <textarea type="text" class="form-control text-uppercase" rows="2" id="fr_descripcionEstadoCuenta" name="fr_descripcionEstadoCuenta" autocomplete="off"></textarea>
        </div>
        <div class="form-group col-md-3">
            <label>&nbsp;</label> <br />
            <button type="button" class="btn btn-style btn-ok" id="btnCargar">
                <i class="fa fa-upload"></i>&nbsp;&nbsp;Cargar Edo de Cuenta&nbsp;&nbsp;
            </button>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="section">
            <br />
            <table class="cell-border table-striped " id="tbl_Entregables" style="width:100%" data-title-datatable="EdoCuenta">
                <thead>
                    <tr>
                        <td>Estado de cuenta</td>
                        <td>Descripción</td>
                        <td>Periodo</td>
