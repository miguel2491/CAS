        var id_gestoria = $("#s_gestoria option:selected").val();
        var gestoria = $("#s_gestoria option:selected").text();
        var cantidad = $("#s_cantidad").val();
        var t = TableGestoria;
        if (id_gestoria != 0 && cantidad > 0) {
            //t.clear().draw(false);
            t.row.add(
                {
                    0: id_gestoria,
                    1: gestoria,
                    2: cantidad
                }
            );
            t.columns.adjust().draw(false);
            $("#s_gestoria").val(0);
            $("#s_cantidad").val(0);
        } else {
            jsSimpleAlert("Error", "No has agregado una gestoria o cantidad no permitida");
