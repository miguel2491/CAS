                <td>Estatus</td>
                <td>Fecha creación</td>
                <td>Correo electrónico</td>
                <td>Teléfono</td>
                <td>Teléfono movil</td>
                <td>Dirección fiscal</td>
                <td>Id usuario</td>
                <td>Nombre</td>
                <td>Apellido paterno</td>
                <td>Apellido materno</td>
                <td>Régimen</td>
                <td>Id régimen</td>
                <td>Actividad Económica</td>
                <td>Es asesoria</td>
                <td>Aplica COI</td>
